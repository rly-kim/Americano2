<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/searchText"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:hint="매장을 찾아보세요"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="64dp"
            android:layout_height="66dp"
            android:layout_alignRight="@id/searchText"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="#FFFFFF"
            android:padding="15dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/magnifyingglass" />

    </RelativeLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="26dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="26dp"
        android:columnCount="4"
        android:rowCount="5">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_row="0"
            android:layout_column="3"
            app:srcCompat="@drawable/baskinrobbins" />

        <Button
            android:id="@+id/Button2"
            android:layout_width="92dp"
            android:layout_height="122dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/starbucks"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:textColor="#00FFFFFF"
            android:text="@string/starbucks_hongdae"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_row="0"
            android:layout_column="1"
            app:srcCompat="@drawable/angelinus" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_row="0"
            android:layout_column="2"
            app:srcCompat="@drawable/lottedepartment" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="95dp"
            android:layout_height="120dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/homeplus" />




    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/favoriteButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="favorites"
            android:background="#FFFFFF"/>

    </RelativeLayout>

</LinearLayout>