<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mapimage"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/starbucks_hongdae"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="36sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/storeCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:text="카페"
        android:gravity="right"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="3dp">

        <ImageButton
            android:id="@+id/callBut"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginRight="15dp"
            android:background="#00FFFFFF"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/callbutton">

        </ImageButton>

        <ImageButton
            android:id="@+id/likeBut"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="15dp"
            android:background="#00FFFFFF"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/likebutton">

        </ImageButton>

        <Button
            android:id="@+id/crowdednessBut"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="#FFC107"
            android:padding="5dp"
            android:text="@string/percent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium">

        </Button>

    </GridLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="주소" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="영업시간" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="전화번호" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="휴무일" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="홈페이지" />

</LinearLayout>